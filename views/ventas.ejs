<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="UTF-8" />
        <meta http-equiv="X-UA-Compatible" content="IE=edge" />
        <meta name="viewport" content="width=device-width, initial-scale=1.0" />
        <link href="/css/sign-in.css" rel="stylesheet" />
        <link
            href="https://fonts.googleapis.com/css2?family=Montserrat:wght@200&family=Roboto&display=swap"
            rel="stylesheet"
        />
        <link
            href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.1/dist/css/bootstrap.min.css"
            rel="stylesheet"
            integrity="sha384-iYQeCzEYFbKjA/T2uDLTpkwGzCiq6soy8tYaI1GyVh/UjpbCx/TYkiZhlZB6+fzT"
            crossorigin="anonymous"
        />
        <link rel="icon" href="/img/perfume.png" />
        <title>Ventas</title>
    </head>
    <body>
        <%- include('./partials/header') %>
        <h1 class="container">Ventas</h1>

        <div class="container">
            <table class="table table-hover table-bordered caption-top">
                <caption>
                    Lista de ventas
                </caption>
                <thead class="table-light">
                    <tr>
                        <th scope="col">#</th>
                        <th scope="col">usuario_id</th>
                        <th scope="col">email</th>
                        <th scope="col">producto_id</th>
                        <th scope="col">modelo</th>
                        <th scope="col">fecha</th>
                        <th scope="col">retiro</th>
                        <th scope="col">provincia</th>
                        <th scope="col">direccion</th>
                        <th scope="col">cantidad</th>
                        <th scope="col">monto_unitario</th>
                        <th scope="col">monto_total</th>
                    </tr>
                </thead>
                <tbody>
                    <% ventas.forEach(e => { %>
                    <tr>
                        <th scope="row"><%= e.id %></th>
                        <td><%= e.usuario_id %></td>
                        <td><%= e.usuarios.email %></td>
                        <td><%= e.producto_id %></td>
                        <td><%= e.productos.modelo %></td>
                        <td><%= e.detalle_venta.fecha %></td>
                        <td>
                            <% if (e.retiro) { %> si <%} else { %> no <% } %>
                        </td>
                        <td><%= e.detalle_venta.provincia_destino %></td>
                        <td><%= e.usuarios.direccion %></td>
                        <td><%= e.cantidad %></td>
                        <td><%= e.monto_unitario %></td>
                        <td><%= e.detalle_venta.monto_total %></td>
                    </tr>
                    <% }) %>
                </tbody>
            </table>
        </div>
    </body>
</html>
